@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <a class="page-scroll btn btn-outline" href="#" title="Acesso restrito">Olá, @User.Identity.GetUserName().</a>
    <a class="page-scroll btn btn-outline" href="@Url.Action("Sair", "Acesso")">
        <i class="fa fa-power-off"></i> Sair 
    </a>
}
else
{
    <a class="page-scroll btn btn-outline" href="@Url.Action("Index", "Acesso")" title="Cadastre-se em nosso site">Acesse</a>
}